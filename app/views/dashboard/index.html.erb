    <div class="dashboard-wrapper">

      <!-- Botão que controla a sidebar -->
      <div class="sidebar-toggle" onclick="toggleSidebar()">☰</div>

      <!-- Sidebar colapsável -->
      <aside class="sidebar">
        <ul class="sidebar-menu">

          <li><%= link_to "👤 Perfil", edit_user_registration_path %></li>
          <li><%= link_to "⚙️ Configurações", settings_path %></li>

          <% if current_user.admin? %>
            <li><%= link_to "📚 Novo Livro", new_book_path %></li>
            <li><%= link_to "📝 Livros Emprestados", borrowed_books_path %></li>
            <li><%= link_to "🔄️ Gerenciar Livros", books_path %></li>
          <% else %>
            <li><%= link_to "📖 Ver Livros", books_path %></li>
            <li><%= link_to "📝 Empréstimos", my_loans_loans_path %></li>

          <% end %>

          <li>
            <%= form_with url: destroy_user_session_path, method: :delete do %>
              <%= submit_tag "Sair", class: "btn btn-logout-sidebar" %>
            <% end %>
          </li>
        </ul>
      </aside>

      <!-- Área principal -->
      <main class="dashboard-main">
        <h1>Bem-vindo, <%= current_user.email %>!</h1>
      </main>

    </div>

    <script>
    function toggleSidebar() {
      document.querySelector('.sidebar').classList.toggle('expanded');
    }
    </script>
