
  <%= form_with(model: @book, local: true) do |form| %>

    <% if @book.errors.any? %>
      <div class="errors">
        <h4>Erro ao salvar o livro:</h4>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "Título" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :author, "Autor" %>
      <%= form.text_field :author, class: "form-control" %>
    </div>

    <% if @book.respond_to?(:price) %>
      <div class="form-group">
        <%= form.label :price, "Preço" %>
        <%= form.number_field :price, class: "form-control", step: 0.01 %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :description, "Descrição" %>
      <%= form.text_area :description, class: "form-control", rows: 4 %>
    </div>

    <div class="form-group checkbox-group">
      <%= form.check_box :available %>
      <%= form.label :available, "Disponível" %>
    </div>

    <%= form.submit @book.new_record? ? "Salvar Livro" : "Atualizar Livro", class: "btn" %>
    <br>
    <%= link_to "⬅️ Voltar", dashboard_path, class: "back-link" %>

  <% end %>
</div>
