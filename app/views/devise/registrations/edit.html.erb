<div class="page-container settings-container">
  <!-- Título principal -->
  <h1>⚙️ Editar Perfil</h1>
  <p class="subtitle">Atualize suas informações de conta com segurança.</p>

  <!-- Card com formulário -->
  <div class="card">
    <h2>Informações da Conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "E-mail" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "Senha" %> <i>(deixe em branco se não quiser alterar)</i>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br>
          <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmação de Senha" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "Senha Atual" %> <i>(necessária para confirmar alterações)</i>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <!-- Botões -->
      <div class="actions">
        <%= f.submit "Atualizar Perfil", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Card para cancelar conta -->
  <div class="card">
    <h2>Cancelar Conta</h2>
    <p>Se estiver insatisfeito, você pode cancelar sua conta.</p>
    <%= button_to "Cancelar Conta", registration_path(resource_name), 
                  data: { confirm: "Tem certeza que deseja cancelar sua conta?" },
                  method: :delete, class: "btn btn-secondary" %>
  </div>

  <!-- Botão de voltar -->
  <div class="back-btn">
    <%= link_to "⬅️ Voltar", root_path, class: "btn btn-back" %>
  </div>
</div>
